{
  "manifest_version": 3,
  "name": "Copy Open Tab Links in HTML",
  "version": "1.0",
  "description": "Copies the titles and URLs of all open tabs to the clipboard in HTML format",
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "tabs",
    "clipboardWrite"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  }
}